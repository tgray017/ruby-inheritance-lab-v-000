#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Smith"

some_other_knowledge = avi.teach
steve.learn(some_other_knowledge)
puts "Steve just learned this important knowledge: '#{steve.knowledge.last}' from Avi"

tom = Student.new
tom.first_name = "Tom"
tom.last_name = "Gray"
tom.learn(some_knowledge)
tom.learn(some_other_knowledge)
puts "Tom just learned this important knowledge: '#{tom.knowledge.first}' and '#{tom.knowledge.last}' from Avi"


